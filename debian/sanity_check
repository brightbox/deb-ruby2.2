#!/bin/sh

failed=0
passed=0

fail() {
  failed=$(($failed + 1))
  echo "FAIL"
}

pass() {
  passed=$(($passed + 1))
  echo "PASS"
}

should_not_exist(){
  for file in "$@"; do
    printf "$file should not exist: "
    test -e debian/tmp/"$file" && fail || pass
  done
}

should_exist() {
  for file in "$@"; do
    printf "$file should exist: "
		file=$(ls debian/tmp/$file)
    test -e "$file" && pass || fail
  done
}

# test multi-arch support
arch=$(dpkg-architecture -qDEB_HOST_MULTIARCH)
libdir=usr/lib
archlibdir=usr/lib/${arch}
should_not_exist  ${libdir}/libruby-2.2.so.2.2
should_exist      ${archlibdir}/libruby-2.2.so.2.2
should_not_exist  ${libdir}/pkgconfig/ruby-2.2.pc
should_exist      ${archlibdir}/pkgconfig/ruby-2.2.pc
should_exist      ${libdir}/ruby/gems/2.2.0/specifications/default/json-1.8.*.gemspec


echo
echo "Passed ${passed} tests, failed ${failed} tests"
if test "$failed" -ne 0; then
  exit 1
fi
